@model List<Product>
<div class="well well-small">
    <h4>Featured Products <small class="pull-right">200+ featured products</small></h4>
    <div class="row-fluid">
        <div id="featured" class="carousel slide">
            <div class="carousel-inner">

                @for (int i = 0; i < Model.Count / 4; i++)
                {
                    if (i == 0)
                    {
                        <div class="item active">
                            <ul class="thumbnails">
                                @foreach (var product in Model.Skip(i).Take(4))
                                {
                                    <li class="span3">
                                        <div class="thumbnail">
                                            <i class="tag"></i>
                                            <a href="product_details.html"><img src='@product.MainPicturePath' alt=""></a>
                                            <div class="caption">
                                                <h5>@product.Name</h5>
                                                <h4><a class="btn" href="">VIEW</a> <span class="pull-right">$@product.UnitPrice</span></h4>
                                                @*'@Url.Action("", "Product", new { productid = product.Id })'*@
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <ul class="thumbnails">
                                @foreach (var product in Model.Skip(i).Take(4))
                                {
                                    <li class="span3">
                                        <div class="thumbnail">
                                            <i class="tag"></i>
                                            <a href="product_details.html"><img src='@product.MainPicturePath' alt=""></a>
                                            <div class="caption">
                                                <h5>@product.Name</h5>
                                                <h4><a class="btn" href="">VIEW</a> <span class="pull-right">$@product.UnitPrice</span></h4>
                                                @*'@Url.Action("", "Product", new { productid = product.Id })'*@
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                }


            </div>

            <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#featured" data-slide="next">›</a>
        </div>
    </div>
</div>