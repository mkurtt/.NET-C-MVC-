    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="#" class="active" id="login-form-link">Login</a>
                            </div>
                            <div class="col-xs-6">
                                <a href="#" id="register-form-link">Register</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <input type="hidden" id="csaction" value='@ViewBag.Link' />
                            <div class="col-lg-12">
                                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form", role = "form", style = "display:block;" }))
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Email, new { type = "email", id = "login-email", tabindex = "1", @class = "form-control", placeholder = "Email" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { id = "login_password", tabindex = "2", @class = "form-control", placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                    <div class="form-group text-center">
                                        @Html.CheckBoxFor(x => x.RememberMe, new { tabindex = "3", @class = "", id = "remember" })
                                        @Html.Label(expression: "RememberMe", labelText: "Remember Me?")
                                    </div>

                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="text-center">
                                                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Account", new { tabindex = "5", @class = "forgot-password" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "register-form", role = "form", style = "display: none;" }))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Email, new { type = "email", id = "register_email", tabindex = "1", @class = "form-control", placeholder = "Email" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(x => x.Password, new { id = "register_password", tabindex = "2", @class = "form-control", placeholder = "Password" })
                                    </div>

                                    <div class="form-group">
                                        @Html.PasswordFor(x => x.ConfirmPassword, new { id = "confirm-password", tabindex = "2", @class = "form-control", placeholder = "Confirm Password" })
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
